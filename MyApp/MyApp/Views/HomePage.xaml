<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="MyApp.Views.HomePage"
             IconImageSource="home_icon_2x.png"
             Title="{Binding Title}">


    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <!--<Label Text="Welcome to my Home Page"/>-->
            <Image Source="logo_MaSa.png" Margin="25"/>

            <Label Text="Welkom bij MaSa!" HorizontalOptions="CenterAndExpand" FontSize="12" Margin="25" />

            <Button Text="Info over MaSa"
                        VerticalOptions="CenterAndExpand"
                        HorizontalOptions="Center"
                        FontSize="16"
                        WidthRequest="318"
                        HeightRequest="50"
                        Margin="25"
                        Clicked="Button_Clicked"/>

            <Label Text="Veel Plezier!" HorizontalOptions="CenterAndExpand" FontSize="12" Margin="25"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>