<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             xmlns:local="clr-namespace:MyApp.ViewModels"
             xmlns:model="clr-namespace:MyApp.Models"
             x:Class="MyApp.Views.WorkoutDetailPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="Center">
        <Image Source="{Binding ImageDetail}" HeightRequest="300" WidthRequest="300"/>
        <Label Text="{Binding Detail}" HorizontalTextAlignment="Center"/>
        <Label Text="{Binding Instructions}" Margin="20,20" FontSize="Small"/>
    </StackLayout>


</ContentPage>